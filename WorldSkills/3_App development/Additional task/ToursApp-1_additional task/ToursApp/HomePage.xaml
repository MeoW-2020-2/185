<Page x:Class="ToursApp.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ToursApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <StackPanel VerticalAlignment="Center">
        <Button Content="OpenCV" Width="175" Height="30" Margin="0 0 0 30" Style="{StaticResource btn}" Click="BtnOpenCV_Click" />
        <Button Content="Test" Width="175" Height="30" Style="{StaticResource btn}" Click="BtnTest_Click" />
    </StackPanel>
</Page>
